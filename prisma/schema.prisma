model Session {
  id String @id @unique
  events Event[]
  date DateTime @default(now())
  participants User[]
  duration DateTime?
}

model User {
  id String @id @unique
  firstname String 
  lastname  String
  role      String
  session   Session? @relation(fields: [session_id], references: [id])
  session_id String
}

model Scene {
  id String @id @unique
}

model Evidence {
  id String @id
}
model Event {
  id String @id
  session Session @relation(fields: [session_id], references: [id])
  session_id String 
}
