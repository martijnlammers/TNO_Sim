//https://prismaliser.app/ to visualize the models.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./databases/simulation_history.db"
}

model Session {
  id           String    @id @unique @default(uuid())
  description  String?
  participants   User[]   
  events       Event[]
  date         DateTime  @default(now())
  duration     DateTime?
  scene        Scene[]
}

model User {
  id         String   @id @unique @default(uuid())
  firstname  String
  lastname   String
  addition   String?
  role       String   @default("TRAINEE")
  session    Session? @relation(fields: [session_id], references: [id]) 
  session_id String?  
  event      Event?   @relation(fields: [event_id], references: [id])
  event_id   String?
}

model Scene {
  id          String     @id @unique @default(uuid())
  name        String
  description String
  session     Session   @relation(fields: [session_id], references: [id])
  session_id  String    @unique
  evidences   Evidence[]
}

model Evidence {
  id         String  @id @unique @default(uuid())
  x          Int
  y          Int
  z          Int
  type       String
  discovered Boolean
  scene      Scene?   @relation(fields: [scene_id], references: [id])
  scene_id   String?
  event      Event?   @relation(fields: [event_id], references: [id])
  event_id   String?
}

model Event {
  id         String    @id @unique  @default(uuid())
  type       String
  timestamp  DateTime  @default(now())
  user       User[]
  session    Session   @relation(fields: [session_id], references: [id])
  session_id String
  evidence   Evidence[]
  glasses    String?
  filter     String?
}