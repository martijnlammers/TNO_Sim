//https://prismaliser.app/ to visualize the models.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id           String    @id @unique @default(uuid())
  description  String?
  participants User[]   
  events       Event[]
  date         DateTime  @default(now())
  duration     DateTime?
  scene        Scene[]
}

model User {
  id         String   @id @unique @default(uuid())
  firstname  String
  lastname   String
  addition   String?
  role       Int   
  session    Session? @relation(fields: [sessionId], references: [id]) 
  sessionId String?  
  event      Event[]  
}

model Scene {
  id          String     @id @unique @default(uuid())
  name        String
  description String
  session     Session   @relation(fields: [sessionId], references: [id])
  sessionId  String    @unique
  evidences   Evidence[]
}

model Evidence {
  id         String  @id @unique @default(uuid())
  x          Float
  y          Float
  z          Float
  type       String
  scene      Scene?   @relation(fields: [sceneId], references: [id])
  sceneId   String?
  event      Event?   @relation(fields: [eventId], references: [id])
  eventId   String?
}

model Event {
  id         String    @id @unique  @default(uuid())
  action     Int
  timestamp  DateTime  @default(now())
  user       User?     @relation(fields: [userId], references: [id])
  userId    String?
  session    Session   @relation(fields: [sessionId], references: [id])
  sessionId String
  evidence   Evidence[]
  glasses    Int?
  filter     Int?
}