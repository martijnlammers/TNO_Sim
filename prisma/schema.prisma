generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./databases/simulation_history.db"
}

model Sim_history {
  date          DateTime    @default(now())
  id            String      @id @unique
  events        Sim_event[] 
}

model Sim_event {
  id                       Int @id @default(autoincrement())
  timestamp                DateTime              
  user_id                  String            
  action                   String
  history                  Sim_history @relation(fields: [history_id], references: [id])
  history_id               String 
  @@unique([history_id, id])
}
